<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.recordable.subject %></td>
        <td><%= message.recordable.content %></td>
        <td><%= link_to 'Show', bucket_message_url(@bucket, message) %></td>
        <td><%= link_to 'Edit', edit_bucket_message_url(@bucket, message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_bucket_message_url(@bucket) %>
